<RelativeLayout
    android:id="@+id/rootRL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/trigofondo">

    <Button
        android:id="@+id/btnCotizaciones"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Cotizaciones"
        android:textColor="@android:color/black"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnMovimiento"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCotizaciones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Movimiento"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnMiBolsillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnMovimiento"
        android:layout_alignRight="@+id/btnMovimiento"
        android:layout_below="@+id/btnMovimiento"
        android:layout_marginTop="130dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="  MI BOLSILLO   "
        android:textSize="40dp" />


</RelativeLayout>
